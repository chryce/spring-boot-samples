<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="employeeBean"
          class="com.apress.prospring4.ch2._SetterBasedDependencyInjection.Simple.Employee">
    </bean>

    <bean id="employeeServiceBean" class="com.apress.prospring4.ch2._SetterBasedDependencyInjection.Simple.EmployeeService">
        <property name="employee" ref="employeeBean"></property>
    </bean>
</beans>
